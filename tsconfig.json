{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "strict": true,
        "noEmit": false,
        "declaration": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": false
    },
    "exclude": [
        "**/errors.ts",
        "**/*.test.ts",
        "**/*.spec.ts",
        "dist",
        "vitest.config.ts",
        "eslint.config.ts",
        "coverage",
        "TEST"
    ]
}
